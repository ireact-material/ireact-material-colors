{
  "compilerOptions": {
    // 每个 TypeScript 或 JavaScript 文件生成.d.ts文件
    "declaration": true,
    // .d.ts为映射回原始.ts源文件的文件生成源映射
    "declarationMap": true,
    // 确保发出的 JavaScript 的兼容性
    "esModuleInterop": true,
    // 模块
    "module": "commonjs",
    // 指定模块解析策略
    "moduleResolution": "node",
    // 报告未使用的局部变量的错误
    "noUnusedLocals": true,
    // 报告函数中未使用参数的错误
    "noUnusedParameters": true,
    // 严格模式
    "strict": true,
    // 跳过声明文件的类型检查
    "skipLibCheck": true,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
